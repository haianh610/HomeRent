<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="12dp">

<androidx.cardview.widget.CardView
    android:id="@+id/imageCardView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <ImageView
        android:id="@+id/imageViewPostView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_image" />
</androidx.cardview.widget.CardView>


<TextView
    android:id="@+id/textViewTitleView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:ellipsize="end"
    android:maxLines="2"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@id/buttonSavePost"
    app:layout_constraintStart_toEndOf="@id/imageCardView"
    app:layout_constraintTop_toTopOf="@id/imageCardView"
    tools:text="Phân lô Trần Điền - KĐT Định Công! Ô tô tránh, vỉa hè, kinh doanh đỉnh" />

<TextView
    android:id="@+id/textViewPriceView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textColor="@color/design_default_color_primary"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="@id/textViewTitleView"
    app:layout_constraintTop_toBottomOf="@id/textViewTitleView"
    tools:text="11 triệu/tháng" />

<TextView
    android:id="@+id/textViewAreaView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:textSize="14sp"
    android:textColor="@android:color/darker_gray"
    app:layout_constraintBottom_toBottomOf="@id/textViewPriceView"
    app:layout_constraintStart_toEndOf="@id/textViewPriceView"
    app:layout_constraintTop_toTopOf="@id/textViewPriceView"
    tools:text="70m2"/>

<!-- Icon địa chỉ -->
<ImageView
    android:id="@+id/imageViewLocationIconView"
    android:layout_width="14dp"
    android:layout_height="14dp"
    android:layout_marginTop="6dp"
    android:src="@drawable/ic_location_pin"
    app:layout_constraintStart_toStartOf="@id/textViewPriceView"
    app:layout_constraintTop_toBottomOf="@id/textViewPriceView"
    app:tint="@android:color/darker_gray" />

<TextView
    android:id="@+id/textViewAddressView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:textColor="@android:color/darker_gray"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="@id/imageViewLocationIconView"
    app:layout_constraintEnd_toEndOf="@id/textViewTitleView"
    app:layout_constraintStart_toEndOf="@id/imageViewLocationIconView"
    app:layout_constraintTop_toTopOf="@id/imageViewLocationIconView"
    tools:text="Hoàng Mai, Hà Nội" />

<TextView
    android:id="@+id/textViewDateView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textSize="12sp"
    android:textColor="@android:color/darker_gray"
    app:layout_constraintStart_toStartOf="@id/imageViewLocationIconView"
    app:layout_constraintTop_toBottomOf="@id/imageViewLocationIconView"
    app:layout_constraintBottom_toBottomOf="@id/imageCardView"
    tools:text="07/04/2025" />

<!-- Save Button (Bookmark) -->
<ImageButton
    android:id="@+id/buttonSavePost"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Lưu tin"
    android:padding="8dp"
    android:scaleType="centerInside"
    android:src="@drawable/bookmark_24px"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="@android:color/darker_gray" /> <!-- Màu mặc định -->

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>